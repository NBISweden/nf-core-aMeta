/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/ameta -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input                   = 'test-data_tmp/resources/samples.csv'

    // Databases
    bowtie2_db              = 'test-data_tmp/resources/ref.fa'
    bowtie2_seqid2taxid_db  = 'test-data_tmp/resources/seqid2taxid.pathogen.map'
    krakenuniq_db           = 'test-data_tmp/resources/KrakenUniq_DB'
    pathogenomes_found      = 'test-data_tmp/resources/pathogenomesFound.tab'
    malt_seqid2taxid_db     = 'test-data_tmp/resources/KrakenUniq_DB/seqid2taxid.map'
    malt_nt_fasta           = 'test-data_tmp/resources/ref.fa'
    malt_accession2taxid    = 'test-data_tmp/resources/accession2taxid.map'
    ncbi_dir                = 'ncbi'
}

process {
    withName: 'NFCORE_AMETA:AMETA:MALTEXTRACT' { // Use fully qualified name to bypass modules.config
        memory = 6.GB
    }
}
